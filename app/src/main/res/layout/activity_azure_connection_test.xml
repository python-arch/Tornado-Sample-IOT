<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AzureConnectionTest">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/tornado_logo" />

        <Button
            android:id="@+id/upButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:background="@drawable/btn_primary"
            android:onClick="onUpButtonClick"
            android:text="Up" />

        <Button
            android:id="@+id/downButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/btn_primary"
            android:text="Down"
            android:layout_below="@id/upButton"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:onClick="onDownButtonClick" />

        <TextView
            android:id="@+id/displayValueTextView"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:background="@drawable/background_main"
            android:layout_height="wrap_content"
            android:text="Display Value : 14"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:layout_below="@id/downButton"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />
</RelativeLayout>
