<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".AzureConnectionTest">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="95dp"
            android:src="@drawable/tornado_logo" />

        <Button
            android:id="@+id/upButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/btn_primary"
            android:onClick="onUpButtonClick"
            android:text="Up" />

        <Button
            android:id="@+id/downButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/logo"
            android:layout_marginStart="222dp"
            android:layout_marginTop="-8dp"
            android:layout_toEndOf="@+id/upButton"
            android:background="@drawable/btn_primary"
            android:onClick="onDownButtonClick"
            android:text="Down" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="626dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/background_main"
            android:padding="10dp">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="150dp"
                    android:layout_height="204dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Component Data"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/h_louvre"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="H_LOUVRE"
                            android:textColor="#000000"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/plasma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="PLASMA"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fan"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="FAN"
                            android:textColor="#000000"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/v_louvre"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="V_LOUVRE"

                            android:textColor="#000000"
                            android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_reset_wifi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.768">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temprature Data"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/TEMP_CELSIUS_USER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="temp_cel_user"
                            android:textColor="#000000"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/TEMP_CELSIUS_INDOOR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="temp_indoor"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/TEMP_CELSIUS_OUTDOOR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="temp_cel_outdoor"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/LinearLayout5"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout2">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Timer Data"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/timer_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="Timer State"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/timer_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="Timer Hours"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/button_next_errors"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout2">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Mode Data"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/features"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="FEATURES"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="MODE"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.537"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Humidity Data"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/HUMIDITY_RATIO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="HUMIDITY_RATIO"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/button_get_power"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average Power Data"
                            android:textColor="#000000" />


                        <TextView
                            android:id="@+id/DAILY_AVERAGE_POWER_WATT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="DAILY_AVERAGE_POWER_WATT"
                            android:textColor="#000000"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Power Data"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/CURRENT_POWER_WATT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/txt_primary"
                            android:padding="10dp"
                            android:text="CURRENT_POWER_WATT"
                            android:textColor="#000000"
                            android:textSize="13sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_get_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="28dp"
                    android:background="@drawable/btn_primary"
                    android:padding="5dp"
                    android:text="Get Average PWR"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_next_errors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="52dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_primary"
                    android:onClick="onUpButtonClick"
                    android:padding="10dp"
                    android:text="Go to Errors"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/btn_reset_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_primary"
                    android:onClick="onUpButtonClick"
                    android:padding="10dp"
                    android:text="Reset Wifi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_next_errors" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
